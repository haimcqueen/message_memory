# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_service_role_key_here

# Whapi Configuration
WHAPI_TOKEN=your_whapi_bearer_token_here

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here

# OpenAI Models (optional - defaults provided)
OPENAI_PDF_MODEL=gpt-5.1-2025-11-13
OPENAI_SESSION_MODEL=gpt-5-mini-2025-08-07
OPENAI_TRANSCRIPTION_MODEL=whisper-1

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Environment
ENVIRONMENT=development

# n8n Webhook Configuration
N8N_WEBHOOK_URL=https://your-n8n-instance.app.n8n.cloud/webhook/your-webhook-id
# Used for both outbound (to n8n) and inbound (from n8n error webhook) authentication
N8N_WEBHOOK_API_KEY=your_n8n_api_key_here
N8N_BATCH_DELAY_SECONDS=60
#
# n8n Error Webhook: POST /webhook/n8n-error
# When n8n workflows fail, send any error payload to this endpoint with:
# - Authorization: Bearer {N8N_WEBHOOK_API_KEY}
# - Body: Any JSON (e.g., {"error_message": "description"} or n8n's default error format)
# Errors will be sent to admin WhatsApp: 4915202618514

# Session Detection Configuration (optional - defaults provided)
SESSION_TIMEOUT_HOURS=24
SESSION_RECENT_MESSAGES_LIMIT=20
# Note: SESSION_DETECTION_TEMPERATURE is not configurable for gpt-5-mini models (uses default 1.0)
SESSION_DETECTION_MAX_TOKENS=10

# Presence Configuration (optional - defaults provided)
# Duration for showing typing indicator (in seconds)
PRESENCE_TYPING_MIN_SECONDS=13
PRESENCE_TYPING_MAX_SECONDS=18

# File Upload Limits (optional - defaults provided)
MAX_FILE_SIZE_MB=50
