# Integration Test Environment Variables
# Copy this file to .env and fill in with your test credentials
# IMPORTANT: Use test/development credentials, NOT production!

# Supabase (use a test project)
SUPABASE_URL=https://your-test-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_test_service_role_key

# OpenAI (use API key with billing limits for safety)
OPENAI_API_KEY=sk-test-your-openai-api-key

# Whapi (use test channel)
WHAPI_API_URL=https://gate.whapi.cloud
WHAPI_TOKEN=your_test_whapi_token

# n8n (use test webhook endpoint)
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook-test/batch
N8N_BEARER_TOKEN=your_test_n8n_bearer_token

# Test Data (use test phone numbers)
TEST_CHAT_ID=1234567890@s.whatsapp.net
TEST_PHONE_NUMBER=+1234567890
ADMIN_PHONE_NUMBER=+0987654321

# Redis (usually localhost for tests)
REDIS_HOST=localhost
REDIS_PORT=6379

# Media Storage
MEDIA_BUCKET_NAME=whatsapp-media-test

# OpenAI Models (can use cheaper models for tests)
OPENAI_PDF_MODEL=gpt-4o
OPENAI_VISION_MODEL=gpt-4o
